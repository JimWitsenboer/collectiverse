<section class="py-5">
  <div class="container">
    <div class="row gx-5">
      <aside class="col-lg-6">
        <div class="image-show">
           <%= cl_image_tag @toy.photo.key, height: "512px", width: "624px", class: 'img-show' %>
        </div>
      </aside>
      <main class="col-lg-6">
        <div class="ps-lg-3">
          <h4 class="title text-dark">
            <%= @toy.name %>
          </h4>
          <div class="d-flex flex-row my-3">
            <div class="text-warning mb-1 me-2">
              <i class="fa fa-star"></i>
              <i class="fa fa-star"></i>
              <i class="fa fa-star"></i>
              <i class="fa fa-star"></i>
              <i class="fas fa-star-half-alt"></i>
              <span class="ms-1">
                4.5
              </span>
            </div>
            <span class="text-muted"><i class="fas fa-shopping-basket fa-sm mx-1"></i>154 orders</span>
            <span class="text-success ms-2">In stock</span>
          </div>

          <div class="mb-3">
            <span class="h5"><%= number_to_currency(@toy.price) %></span>
            <span class="text-muted">/per item</span>
          </div>

          <p>
            <%= @toy.description %>
          </p>

          <div class="row">
            <dt class="col-3">Type:</dt>
            <dd class="col-9">Toys</dd>

            <dt class="col-3">Seller:</dt>
            <dd class="col-9"><%= @toy.user.username %></dd>
          </div>

          <hr />
          <label class="mb-2">Delivery Option</label>
          <div class="row mb-4">
            <div class="col-md-4 col-6">
              <select class="form-select border border-secondary" style="height: 35px;">
                <option>Standard-Delivery</option>
                <option>Fast-Delivery</option>
                <option>Flash himself will deliver!</option>
              </select>
            </div>
            <!-- col.// -->
            <%= link_to "BUY IT NOW!", new_toy_order_path(@toy), class: "btn btn-buy", data: { no_turbolink: true} %>
          </div>

        </div>
      </main>
    </div>
  </div>
</section>

