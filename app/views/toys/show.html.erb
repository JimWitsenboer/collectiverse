<div class="container">
  <div class="row my-5">
    <div class="col-lg-4"><%= cl_image_tag @toy.photo.key, height: "400px", width: "400px", class: 'img-show' %></div>
    <div class="col-lg-8">
      <h3>Name: <%= @toy.name %> </h3>
      <p>Price: <%= number_to_currency(@toy.price) %> </p>
      <p>Description: <%= @toy.description %> </p>
      <p><%= link_to "Buy it now", new_toy_order_path(@toy), class: "btn btn-primary", data: { no_turbolink: true} %></p>
    </div>
  </div>
</div>
  <div>
    <% if current_user == @toy.user%>
      <%= link_to "Edit", edit_toy_path(@toy), class: "btn btn-link" %>
      <%= button_to "Delete", @toy, method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-link"%>
    <% end %>
  </div>
</div>
