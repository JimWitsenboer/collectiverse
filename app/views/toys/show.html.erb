<div class="container">
  <div class="row my-2">
    <div class="col-lg-4"><%= cl_image_tag @toy.photo.key, height: "400px", width: "400px", class: 'img-show' %></div>
      <div class="col-lg-8">
        <h3>Name: <%= @toy.name %> </h3>
        <p>Price: <%= number_to_currency(@toy.price) %> </p>
        <p>Description: <%= @toy.description %> </p>
        <p><%= link_to "Buy it now", new_toy_order_path(@toy), class: "btn btn-primary", data: { no_turbolink: true} %></p>
      </div>
    </div>
  </div>
  <div>
    <% if current_user == @toy.user%>
      <%= link_to "Edit", edit_toy_path(@toy), class: "btn btn-link" %>
      <%= button_to "Delete", @toy, method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-link"%>
    <% end %>
  </div>

  <div class="row mt-5">
    <h2>Related toys</h2>
    <div class="cards  justify-content-center d-flex" id="related-toys-card">
      <% @similar_toys.first(3).each do |toy| %>
        <div class="card mb-3 mx-auto card-min-height" style="width: 18rem;">
          <%= link_to toy_path(toy) do  %>
            <div class="card-image">
              <p> <%= cl_image_tag toy.photo.key, height: "300px", class: "card-img-top" %> </p>
            </div>
            <div class="card-content m-3">
              <h3 class="toy-name"><%= toy.name %></h3>
              <p class="toy-price"><%= number_to_currency(toy.price) %><span>Incl. shipment</span></p>
              <p class="toy-seller"><i class="fa-solid fa-shop"></i><span><%= toy.user.username %></span></p>
            </div>
          <% end %>
          <% if (user_signed_in?) && (current_user == toy.user) %>
            <%= link_to 'Edit', edit_toy_path(toy), class: "btn btn-link" %>
            <%= button_to "delete", toy, method: :delete, data: { turbo_confirm: "Sure?" }, class: "btn btn-link" %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
