<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h3>Name: <%= @toy.name %> </h3>
      <p>Price: <%= number_to_currency(@toy.price) %> </p>
      <p>Description: <%= @toy.description %> </p>
      <%= cl_image_tag @toy.photo.key %>
      <%= link_to "Buy it now", new_toy_order_path(@toy), class: "btn btn-primary", data: { no_turbolink: true} %>
    </div>

  </div>
  <div class="d-inline">
  <% if current_user == @toy.user%>
    <%= link_to "Edit", edit_toy_path(@toy), class: "btn btn-link" %>
    <%= button_to "Delete", @toy, method: :delete, class: "btn btn-link" %>
  <% end %>
  <%= link_to "Back", toys_path, class: "btn btn-link" %>
</div>
</div>
