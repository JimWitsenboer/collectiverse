<div class="container mt-5 full-page">
    <div class="row center">
        <h2>Your purchases history</h2>

        <table class="table table-striped table-bordered mt-3">
            <tr>
                <th class="center">Image</th>
                <th class="center">Item</th>
                <th class="center">Price</th>
                <th class="center">Seller</th>
                <th class="center">Date purchased</th>
                <th class="center">Order status</th>
            </tr>

            <% @orders.each do |order| %>
            <tr>
                <td><%= cl_image_tag order.toy.photo.key, height: "150px", width: "100px" %></td>
                <td><%= order.toy.name %></td>
                <td><%= number_to_currency(order.toy.price) %></td>
                <td><%= order.toy.user.first_name %></td>
                <td><%= order.created_at.strftime("%B %-d, %Y") %></td>
                <td><%= order.status %></td>
            </tr>
            <% end %>
        </table>
    </div>

  <br>

  <% if user_signed_in? %>
    <%= link_to "See toys", toys_path %>
  <% end %>
</div>
